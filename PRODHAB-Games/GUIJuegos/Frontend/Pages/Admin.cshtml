@page "/admin"
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <title>Panel Admin</title>
  <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body>
  <div class="admin-container">
    <!-- Encabezado -->
    <header class="admin-header">
      <img src="~/images/superdato_1.png" alt="Encabezado" class="header-img">
      <h1 class="header-title">Panel de Administración</h1>
    </header>

    <!-- Layout con panel lateral + contenido -->
    <div class="admin-layout">
      <!-- Panel lateral -->
      <nav class="sidebar">
        <ul>
          <li><button class="nav-btn" data-section="usuarios">Registrar Usuarios</button></li>
          <li><button class="nav-btn" data-section="agregar">Agregar Pregunta</button></li>
          <li><button class="nav-btn" data-section="modificar">Modificar Pregunta/Respuestas</button></li>
          <li><button class="nav-btn" data-section="logout">Cerrar Sesión</button></li>
        </ul>
      </nav>

      <!-- Contenido dinámico -->
      <main class="content">
        <div id="content-area">
          <h2>Bienvenido, Admin</h2>
          <p>Selecciona una opción del menú lateral para comenzar.</p>
            
            <main class="content">
             <div id="adminOut" class="content-box"></div>
            </main>

        </div>
      </main>
    </div>
  </div>

  <script type="module" src="~/js/login.js"></script>
  <script type="module" src="~/js/admin.js"></script>
</body>
</html>
