@page "/login"
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf8" />
  <title>Login</title>
</head>
<body>
  <h1>Registro / Login</h1>

  <div>
    <h3>Register</h3>
    <input id="reg-email" placeholder="correo" />
    <input id="reg-pass" placeholder="password" type="password" />
    <select id="reg-rol">
      <option value="2">usuario</option>
      <option value="1">admin</option>
    </select>
    <button id="btn-register">Crear</button>
  </div>

  <div style="margin-top:1rem;">
    <h3>Login</h3>
    <input id="log-email" placeholder="correo" />
    <input id="log-pass" placeholder="password" type="password" />
    <button id="btn-login">Entrar</button>
    <button id="btn-logout">Salir</button>
  </div>

  <div style="margin-top:1rem;">
    <h3>Juegos (protegido admin)</h3>
    <button id="btn-juegos">Cargar</button>
    <pre id="out"></pre>
  </div>

  <script type="module" src="~/js/login.js"></script>
</body>
</html>